<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel"
            type="com.example.assignment.telstraassignmenttask.viewmodel.CountryItemViewModel"/>
    </data>
    <LinearLayout
        android:id="@+id/main_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageView android:id="@+id/imageHref"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@{viewModel.dataModel.imageHref}" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nuevo evento de desarrollo"
                android:layout_marginBottom="2dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@{viewModel.dataModel.title}"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Los lugareÃ±os han creado un nuevo evento de desarrollo web cerca de su zona."
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:text="@{viewModel.dataModel.description}"/>

        </LinearLayout>
    </LinearLayout>

</layout>